---
import heroBannerImage from "../assets/hero-banner-image.webp";
import { Image } from "@astrojs/image/components";
---

<!DOCTYPE html>
<html
  lang="cs"
  class="scroll-smooth scrollbar-thin scrollbar-thumb-dark-green scrollbar-track-rounded-xl scrollbar-track-gray-100"
>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/gif" href="/logo.gif" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>FUTURE MARKET</title>
  </head>
  <body>
    <header class="bg-beige w-full py-16">
      <div class="container">
        <div class="flex flex-col">
          <h1 class="leading-[1.1] text-base font-bold">
            FUTURE <br /><span class="font-normal"> MARKET</span>
          </h1>
          <div class="flex justify-between sm:overflow-hidden">
            <div class="z-10 flex flex-col gap-6">
              <h2
                class="text-green pt-16 text-5xl sm:text-6xl md:text-7xl font-bold leading-[1.15] sm:whitespace-nowrap"
              >
                Jsme jednička
                <br />
                <span class="text-dark-green"> v lead marketingu</span>
              </h2>
              <p class="text-2xl leading-9 max-w-sm">
                Jsme jedinečná možnost pro růst vašeho businessu. Pro naše
                klienty poskytujeme kvalitní zákaznické portfolio.
              </p>
            </div>
            <Image
              class="hidden h-auto w-full lg:block max-w-sm xl:max-w-2xl 2xl:max-w-3xl translate-y-10 xl:translate-y-0 -translate-x-12 xl:-translate-x-16 2xl:-translate-x-20"
              src={heroBannerImage}
              alt=""
            />
          </div>
        </div>
      </div>
    </header>

    <slot />

    <footer class="bg-dark-green text-beige w-full py-16 sm:py-56">
      <div class="container">
        <div class="flex flex-col justify-between gap-12 text-lg">
          <h3 class="text-center text-5xl sm:text-6xl font-bold">
            FUTURE MARKET s.r.o
          </h3>

          <div class="flex flex-col sm:flex-row gap-8 sm:gap-12">
            <div class="flex flex-col flex-1 gap-4 items-center">
              <h4 class="text-4xl font-bold text-light-green">Telefon</h4>
              <a
                href="tel:+420605976535"
                class="text-center text-lg hover:underline">+420 605 976 535</a
              >
            </div>
            <div class="flex flex-col flex-1 gap-4 items-center">
              <h4 class="text-4xl font-bold text-light-green">Email</h4>
              <a
                href="mailto:office@futuremarket.cz"
                class="text-center text-lg hover:underline"
                >office@futuremarket.cz</a
              >
            </div>
            <div class="flex flex-col flex-1 gap-5 items-center">
              <h4 class="text-4xl font-bold text-light-green">Adresa</h4>
              <address class="not-italic">
                <ul class="text-center text-lg">
                  <li>Slavojova 579/9</li>
                  <li>128 00 Praha</li>
                  <li>IČO: 11883715</li>
                </ul>
              </address>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
